<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_history_item"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_marginBottom="20dp"
    android:padding="15dp">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginEnd="8dp">

        <TextView
            android:id="@+id/tv_qrTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_qrDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_qrTitle"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_qrTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_qrDesc"
            android:layout_marginTop="15dp"
            android:text="@string/visited_at_text"
            tools:ignore="TextContrastCheck" />
    </RelativeLayout>

    <ImageView
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:src="@drawable/qr_item"
        android:contentDescription="@string/qr_share_cd" />

</LinearLayout>